{
  "name": "xlab-3d-render-mcp-app",
  "version": "1.0.0",
  "type": "module",
  "description": "3D Architectural Render MCP App using Three.js and JSCAD",
  "license": "MIT",
  "main": "dist/server.js",
  "bin": {
    "xlab-3d-render-mcp-app": "dist/index.js"
  },
  "scripts": {
    "build:ui": "cross-env INPUT=src/mcp-app.html vite build && mv dist/src/mcp-app.html dist/mcp-app.html && rmdir dist/src",
    "build:server": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:three --external:gsap --external:@modelcontextprotocol/sdk --external:mcp-handler",
    "build:index": "esbuild src/main.ts --bundle --platform=node --format=esm --outfile=dist/index.js --banner:js=\"#!/usr/bin/env node\" --external:three --external:gsap --external:@modelcontextprotocol/sdk --external:mcp-handler",
    "build": "tsc --noEmit && npm run build:ui && npm run build:server && npm run build:index",
    "watch": "cross-env INPUT=src/mcp-app.html vite build --watch",
    "serve": "tsx watch src/main.ts",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run watch\" \"cross-env PORT=3000 npm run serve\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "1.25.2",
    "@upstash/redis": "^1.36.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "framer-motion": "^12.0.0",
    "gsap": "^3.14.2",
    "i18next": "^25.8.6",
    "i18next-browser-languagedetector": "^8.2.1",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.475.0",
    "mcp-handler": "^1.0.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.5.4",
    "three": "^0.173.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.173.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.0",
    "esbuild": "^0.25.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0"
  }
}